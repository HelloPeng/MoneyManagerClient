<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pansoft.lvzp.moneymanagerclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".base.Apl"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/activity_name_main" />
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RegisterActivity"
            android:label="@string/activity_name_register" />
        <activity
            android:name=".ui.UserManagerActivity"
            android:label="@string/activity_name_user_manager" />
        <activity
            android:name=".ui.TradeInfoActivity"
            android:label="@string/activity_name_trade_info" />
        <activity android:name=".ui.EditAndDetailPropertyActivity"></activity>
    </application>

</manifest>